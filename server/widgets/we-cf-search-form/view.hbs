<div class="events-search">
  <form class="form" method="GET">
    <div class="input-group">
      <div class="input-group-addon">
        <label for="events-search">
          <span class="fa fa-search" aria-hidden="true"></span>
          <span class="sr-only">{{t 'event.search.title'}}</span>
        </label>
      </div>
      <input name="title" type="text" class="form-control input-lg" id="events-search" value="{{locals.req.query.title}}" placeholder="{{t 'event.search.title.placeholder'}}">

      <span class="input-group-btn">
        <button type="submit" class="btn btn-default btn-lg">{{t 'Search'}}</button>
      </span>
    </div>
    <input name="my" type="hidden" value="{{locals.req.query.my}}">
  </form>
</div>