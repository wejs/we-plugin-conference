<div class="row">
  <div class="col-lg-12 actions">{{we-action-create-btn model req event.id}}</div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <th>id</th>
    <th>{{t 'title'}}</th>
    <th>{{t 'actions'}}</th>
  </thead>
  <tbody>
    {{#each record}}
      <tr>
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>
          {{we-action-view-btn 'cftopic' this ../req eventId id }}
          {{we-action-edit-btn 'cftopic' this ../req eventId id }}
          {{we-action-delete-btn 'cftopic' this ../req eventId id }}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="3" class="text-center">{{t 'event.topic.empty'}}</td></tr>
    {{/each}}
  </tbody>
</table>