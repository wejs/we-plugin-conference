<form we-submit="ajax" action="/event/{{event.id}}/admin/edit" method="post">
<legend>{{t 'event.structure.menus'}}</legend>
  <div class="form-group">
    <label for="eventMainMenu" class="col-sm-2 control-label">{{t 'menu.main'}}:</label>
    <div class="col-sm-10">
      <select id="eventMainMenu" name="mainMenuId" class="form-control">
        {{#each record}}
          {{#ifCond id ../event.mainMenu.id}}
            <option selected value="{{id}}">{{name}}</option>
          {{else}}
            <option value="{{id}}">{{name}}</option>
          {{/ifCond}}
        {{/each}}
      </select>
    </div>
  </div>

  <br><br>

  <div class="form-group">
    <label for="eventSecondaryMenu" class="col-sm-2 control-label">{{t 'menu.secondary'}}:</label>
    <div class="col-sm-10">
      <select id="eventSecondaryMenu" name="secondaryMenuId" class="form-control">
        {{#each record}}
          {{#ifCond id ../event.secondaryMenu.id}}
            <option selected value="{{id}}">{{name}}</option>
          {{else}}
            <option value="{{id}}">{{name}}</option>
          {{/ifCond}}
        {{/each}}
      </select>
    </div>
  </div>

  <br><br>

  <div class="form-group">
    <label for="eventSocialMenu" class="col-sm-2 control-label">{{t 'menu.social'}}:</label>
    <div class="col-sm-10">
      <select id="eventSocialMenu" name="socialMenu" class="form-control">
        {{#each record}}
          {{#ifCond id ../event.socialMenu.id}}
            <option selected value="{{id}}">{{name}}</option>
          {{else}}
            <option value="{{id}}">{{name}}</option>
          {{/ifCond}}
        {{/each}}
      </select>
    </div>
  </div>

  <br><br>

  <div>
    <button type="submit" class="btn btn-default pull-right">{{t 'Save'}}</button>
  </div>
</form>

<div class="clearfix"></div>

<hr>

<div class="row">
  <div class="col-lg-12 actions">
    {{#link-to 'cfmenu.create' event.id class='btn btn-default'}}{{t 'Create'}}{{/link-to}}
  </div>
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th we-model-attr="id">id</th>
          <th we-model-attr="name">{{t 'name'}}</th>
          <th we-model-attr="actions">{{t 'actions'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each record}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>
            {{#link-to 'cfmenu.edit' eventId id class='btn btn-primary btn-sm'}}{{t 'Edit'}}{{/link-to}}
            {{#link-to 'cfmenu.delete' eventId id class='btn btn-default btn-sm'}}{{t 'Delete'}}{{/link-to}}
          </td>
        </tr>
      {{else}}
        <tr><td colspan="3" class="text-center">{{t 'event.menu.empty'}}</td></tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
