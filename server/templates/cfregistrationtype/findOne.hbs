<table class="table table-striped table-hover">
  <tbody>
      <tr>
        <th>{{t 'id'}}</th>
        <td>{{data.id}}</td>
      </tr>
      <tr>
        <th>{{t 'name'}}</th>
        <td>{{data.name}}</td>
      </tr>
      <tr>
        <th>{{t 'description'}}</th>
        <td>{{{data.description}}}</td>
      </tr>
      <tr>
        <th>{{t 'requireValidation'}}</th>
        <td>{{#if data.requireValidation}}true{{else}}false{{/if}}</td>
      </tr>
      <tr>
        <th>{{t 'createdAt'}}</th>
        <td>{{we-date data.createdAt}}</td>
      </tr>
      <tr>
        <th>{{t 'updatedAt'}}</th>
        <td>{{we-date data.updatedAt}}</td>
      </tr>
  </tbody>
  <tfoot>
    <tr><td colspan="2">
      {{we-action-edit-btn 'cfregistrationtype' data req event.id data.id }}
      {{we-action-delete-btn 'cfregistrationtype' data req event.id data.id }}
    </td>
  </tr></tfoot>
</table>