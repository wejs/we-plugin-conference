<div class="row">
  <div class="col-lg-12">
    {{we-action-create-btn 'cfregistrationtype' req event.id }}
  </div>
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>{{t 'cf.registration.name'}}</th>
          <th>{{t 'requireValidation'}}</th>
          <th>{{t 'actions'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each record}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>{{requireValidation}}</td>
          <td>
            {{we-action-view-btn 'cfregistrationtype' this ../req eventId id }}
            {{we-action-edit-btn 'cfregistrationtype' this ../req eventId id }}
            {{we-action-delete-btn 'cfregistrationtype' this ../req eventId id }}

            <form action="/event/{{eventId}}/admin/cfregistrationtype/{{id}}/mark-all-as-present" method="post">
              <input name="redirectTo" type="hidden" value="{{../req.path}}">
              <button class="btn btn-sm btn-default">{{t 'cfcertificationtype.markAllAsPresent'}}</button>
            </form>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>