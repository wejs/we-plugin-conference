<div class="row">
  <div class="col-lg-12 actions">
    {{#link-to 'cfregistration.create' conference.id class="btn btn-default"}}
      {{t 'conference.register.user'}}
    {{/link-to}}
  </div>
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>userId</th>
          <th>Nome</th>
          <th>email</th>
          <th>Atualizado em</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
      {{#each record}}
        <tr>
          <td>{{id}}</td>
          <td>{{userId}}</td>
          <td>{{displayName}}</td>
          <td>{{email}}</td>
          <td>{{we-date updatedAt}}</td>
          <td>
            {{#ifCond status 'requested'}}
              {{#link-to 'cfregistration.accept' conferenceId id class="btn btn-success"}}
                <i class="glyphicon glyphicon-ok"></i>
                {{t 'accept'}}
              {{/link-to}}
            {{/ifCond}}

            {{we-action-view-btn 'cfregistration' this ../req conferenceId id }}
            {{we-action-edit-btn 'cfregistration' this ../req conferenceId id }}
            {{we-action-delete-btn 'cfregistration' this ../req conferenceId id }}
          </td>
        </tr>
      {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="6">
            {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>