<div class="row">
  <div class="col-lg-12 actions">
    <a class="btn btn-default" href="/conference/{{conference.id}}/admin/registration/create">{{t 'conference.register.user'}}</a>
  </div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover sorted_table" id="cfregistrationtable" we-search-field="title" we-dataTable-url="/conference/{{conference.id}}/admin/registration">
          <thead>
            <tr>
              <th we-model-attr="id">id</th>
              <th we-model-attr="userId">userId</th>
              <th we-model-attr="displayName">displayName</th>
              <th we-model-attr="email">email</th>
              <th we-model-attr="status">status</th>
              <th we-model-attr="updatedAt" data-type="date">updatedAt</th>
              <th we-model-attr="weModelActions">actions</th>
            </tr>
          </thead>
          <tbody>
          {{#each record}}
            <tr>
              <td>{{id}}</td>
              <td>{{userId}}</td>
              <td>{{displayName}}</td>
              <td>{{email}}</td>
              <td>{{status}}</td>
              <td>{{updatedAt}}</td>
              <td></td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>$(document).ready(function() {
  var rt = '?redirectTo='+location.pathname;

  we.components.dataTable('#cfregistrationtable', {
    where: { conferenceId: {{conference.id}} },
    actionRender: function actionRender(table, data, d,record) {
      var  tags = '<a href="/conference/{{conference.id}}/admin/registration/'+record.id+rt+'" class="btn btn-default btn-sm"> {{t "View"}}</a> ';

      tags +='<a href="/conference/{{conference.id}}/admin/registration/'+record.id+'/accept'+rt+'" text="{{t "coference.registration.accept"}}" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-ok"></i></a> ';

      tags += '<a href="/conference/{{conference.id}}/admin/registration/'+record.id+rt+'/edit" text="{{t "Edit"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-pencil"></i></a> ';
      return tags;
    }
  });
});</script>